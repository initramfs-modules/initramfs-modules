FROM docker.io/debian:sid

RUN apt-get update -y -qq && apt-get upgrade -y -qq

RUN DEBIAN_FRONTEND=noninteractive apt-get install -y -qq --no-install-recommends -o Dpkg::Use-Pty=0 dracut-core qemu-system-x86

RUN DEBIAN_FRONTEND=noninteractive apt-get install -y -qq --no-install-recommends -o Dpkg::Use-Pty=0 \
    btrfs-progs \
    busybox-static \
    bzip2 \
    ca-certificates \
    console-setup \
    cpio \
    cryptsetup \
    dash \
    debhelper \
    debhelper-compat \
    fdisk \
    git \
    iputils-arping \
    iputils-ping \
    isc-dhcp-client \
    isc-dhcp-server \
    kmod \
    libdmraid-dev \
    less \
    libkmod-dev \
    linux-image-generic \
    lvm2 \
    mdadm \
    multipath-tools \
    nbd-client \
    nfs-kernel-server \
    ntfs-3g \
    open-iscsi \
    parted \
    pigz \
    pkg-config \
    procps \
    quilt \
    squashfs-tools \
    strace \
    sudo \
    tcpdump \
    thin-provisioning-tools \
    vim \
    wget \
    sysvinit-core \
    && apt-get clean

# workaround for https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=962300
RUN DEBIAN_FRONTEND=noninteractive apt-get download dmraid \
    && DEBIAN_FRONTEND=noninteractive dpkg --unpack dmraid*.deb \
    && rm -rf /var/lib/dpkg/info/dmraid.postinst -f \
    && DEBIAN_FRONTEND=noninteractive dpkg --configure dmraid \
    && apt-get install -yf \
    && apt-get clean

RUN cp /usr/bin/dracut /usr/lib/dracut/dracut.sh
