    iscsi-initiator-utils \
    strace \
    btrfs-progs \
    kmod-devel \
    gcc \
    bzip2 \
    xz \
    tar \
    wget \
    make \
    git \
    bash-completion \
    sudo \
    kernel \
    dhcp-client \
    e2fsprogs \
    tcpdump \
    iproute \
    iputils \
    dbus-daemon \
    kbd \
    squashfs-tools \
    which \
    parted \
    ntfsprogs \
    procps-ng \
    && dnf clean all

